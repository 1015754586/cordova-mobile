<?xml version='1.0' encoding='utf-8'?>
<widget id="com.redhat.errata" version="0.0.1"
	xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>Errata</name>
	<description>
		A sample Apache Cordova application that responds to the
		deviceready
		event.rr
	</description>
	<author email="dev@cordova.apache.org" href="http://cordova.io">
		Apache Cordova Team
	</author>
	<preference name="WebViewBounce" value="false" />
	<preference name="DisallowOverscroll" value="true" />
	
	<icon src="res/icon.png" />
	
	<content src="index.html" />
	<plugin name="cordova-plugin-whitelist" version="1" />
	<access origin="*" />
	<allow-navigation href="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<platform name="android">
		<allow-intent href="market:*" />
	</platform>
	<platform name="ios">
		<allow-intent href="*" />
			<splash src="res/xml/Default~iphone.png" width="320" height="480"/>
		    <splash src="res/xml/Default@2x~iphone.png" width="640" height="960"/>
		    <splash src="res/xml/Default-Portrait~ipad.png" width="768" height="1024"/>
		    <splash src="res/xml/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
		    <splash src="res/xml/Default-Landscape~ipad.png" width="1024" height="768"/>
		    <splash src="res/xml/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
		    <splash src="res/xml/Default-568h@2x~iphone.png" width="640" height="1136"/>
		    <splash src="res/xml/Default-667h.png" width="750" height="1334"/>
		    <splash src="res/xml/Default-736h.png" width="1242" height="2208"/>
		    <splash src="res/xml/Default-Landscape-736h.png" width="2208" height="1242"/>
		
	</platform>
	<feature name="Whitelist">
		<param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
		<param name="onload" value="true" />
		<param name="id" value="cordova-plugin-whitelist" />
	</feature>
	<preference name="SplashScreenDelay" value="3000" />
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="FadeSplashScreen" value="true"/>
	<preference name="FadeSplashScreenDuration" value="4"/>
	<preference name="ShowSplashScreenSpinner" value="false"/>
</widget>
